---
import { Masonry } from "astro-masonry";

const { fullbleed } = Astro.props;
---

<Masonry
  breakpointCols={{
    default:  fullbleed ? 3 : 2,
    1280: 2,
    768: 1,
  }}
  class:list={["masonry flex gap-4 my-8 md:my-10", { "lg:fullbleed lg:px-8": fullbleed }, Astro.props.class]}
  columnClass="grid gap-4"
>
  <slot />
</Masonry>
