---
import "../styles/global.css";
import "../styles/fonts.css";
import Header from "../components/Header.astro";
const { pageTitle, backTo, noHeader } = Astro.props;
import { ClientRouter } from "astro:transitions";
---

<html class="dark text-lg md:text-2xl/normal font-serif p-8 md:px-10" lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="Nadav Spiegelman"
      href={new URL("rss.xml", Astro.site)}
    />
    <title>{pageTitle}</title>
    <ClientRouter />
  </head>
  <body
    class="bg-tumbleweed-100 dark:bg-purple-dark text-purple-dark dark:text-purple-light max-w-[60rem] mx-auto"
  >
    {!noHeader && <Header backTo={backTo} />}
    <slot />
  </body>
</html>
