---
const items = await getCollection("writing");
import Item from "./_item.astro";
import Layout from "@layouts/base.astro";
import { getCollection } from "astro:content";
---

<Layout pageTitle="Writing">
  <ol class="grid md:grid-cols-2 lg:grid-cols-3">
    {
      items.map(({ data, slug }) => {
        return (
          <Item data={data} slug={slug} />
        );
      })
    }
  </ol>
</Layout>
