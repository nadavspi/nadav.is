import UnAction from "./un-action/_un-action.astro";
import AdlProtest from "./adl-protest/_adl-protest.astro";

import BadInvestment from "./_2024-11-11 JVP cipriani picket_Nadav Spiegelman_035.jpg";
import Arrest from "./_JVP 2024-10-14 NYSE_Nadav Spiegelman_188.jpg";
import NotAnotherBomb from "./_2024-08-18 not another bomb nyc rally_0342.jpg";
import Crucifix from "./adl-protest/_2025-03-03 ADL protest INN_Nadav Spiegelman_098.jpg";

import Alan from "./_2024-11-17 zoa gala_Nadav Spiegelman_029.jpg";
import Photo28 from "./_2024-11-17 zoa gala_Nadav Spiegelman_028.jpg";
import Photo29 from "./_2024-11-17 zoa gala_Nadav Spiegelman_029.jpg";
import Photo30 from "./_2024-11-17 zoa gala_Nadav Spiegelman_030.jpg";
import Photo009 from "./_2025-02-03 protect trans kids rally_Nadav Spiegelman_009.jpg";
import Photo010 from "./_2025-02-03 protect trans kids rally_Nadav Spiegelman_010.jpg";
import Photo186 from "./_JVP 2024-10-14 NYSE_Nadav Spiegelman_186.jpg";
import Photo187 from "./_JVP 2024-10-14 NYSE_Nadav Spiegelman_187.jpg";
import Photo189 from "./_JVP 2024-10-14 NYSE_Nadav Spiegelman_189.jpg";
