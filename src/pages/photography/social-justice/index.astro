import Photo166 from "./_oct 7 2024 every life a universe_Nadav Spiegelman_166.jpg";
---

<Layout pageTitle="Photography / Social justice">
  <h1>Social justice</h1>

  <section
    class="border-b-4 border-tumbleweed dark:border-purple pb-12 grid gap-y-8"
  >
    <UnAction />
  </section>
  <section
    class="border-b-4 border-tumbleweed dark:border-purple pb-12 grid gap-y-8"
  >
    <AdlProtest />
  </section>
  <div class="grid grid-cols-2 gap-4 mb-4">
    <Image
      sizes="50vw"
      src={BadInvestment}
      alt='Row of picketers led by an old woman carrying a sign that reads "genocide is a bad investment"'
    />
    <Image
      sizes="50vw"
      src={NotAnotherBomb}
      alt='Front of a rally with large banners including "Not another bomb", "No funding for war crimes", "Fund schools, not weapons"'
    />
    <Image
      sizes="50vw"
      src={Arrest}
      alt='Young woman wearing a shirt that reads "not in our name" getting arrested by NYPD officers'
    />
  </div>
  <div class="grid grid-cols-3 gap-4">
    <Image
      sizes="33vw"
      src={Crucifix}
      alt="Man with eyes closed, waving a flag, wearing an NYPD beanie, and holding a crucifix"
    />
    <Image
      sizes="50vw"
      src={Alan}
      alt='Alan Dershowitz looking angry, holding up an upside down copy of his book, "The Ten Big Anti-Israel Lies"'
    />
    <Image src={Photo28} alt="" />
    <Image src={Photo29} alt="" />
    <Image src={Photo30} alt="" />
    <Image src={Photo009} alt="" />
    <Image src={Photo010} alt="" />
    <Image src={Photo186} alt="" />
    <Image src={Photo187} alt="" />
    <Image src={Photo189} alt="" />
    <Image src={Photo164} alt="" />
    <Image src={Photo165} alt="" />
    <Image src={Photo165} alt="" />
    <Image src={Photo166} alt="" />
  </div>
</Layout>
