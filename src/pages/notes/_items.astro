---
import Item from "./_item.astro";
const { items } = Astro.props;
const unarchived = items.filter((item: CollectionConfig) => !item.data.tags?.includes("archived"))
const archived = items.filter(item => item.data.tags?.includes("archived"))
---

<ol class="grid md:grid-cols-2 lg:grid-cols-3">
  {
    [...unarchived, ...archived].map(({ collection, data, slug }) => {
      return <Item data={data} slug={slug} collection={collection} />;
    })
  }
</ol>
