---
import Items from "./_items.astro";
import Layout from "@layouts/base.astro";
import TagNav from "@components/TagNav.astro";
import { getCollection } from "astro:content";

const writing = await getCollection("writing");
const watching = await getCollection("watching");
const items = [...writing, ...watching].sort((a, b) => b.data.date - a.data.date);
---

<Layout pageTitle="Writing">
  <TagNav />
  <Items items={items} />
</Layout>
